/**
 * @fileoverview Firestore Security Rules for Expense Tracker App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model.  Each user can only
 * access their own data (profile, expenses, categories, payment methods, and tags).
 *
 * Data Structure:
 * - /users/{userId}: User profile information.
 * - /users/{userId}/expenses/{expenseId}: Individual expense records for a user.
 * - /users/{userId}/contributions/{contributionId}: Contribution records for shared expenses.
 * - /users/{userId}/categories/{categoryId}: Expense categories defined by the user.
 * - /users/{userId}/paymentMethods/{paymentMethodId}: Payment methods defined by the user.
 * - /users/{userId}/tags/{tagId}: Tags defined by the user.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - All data is private to the user, accessible only if they are authenticated
 *   and the data belongs to them.
 * - Default security posture is strict:  If a relationship or access pattern
 *   is ambiguous, access is denied.
 *
 * Denormalization for Authorization:
 *  - All subcollections under `/users/{userId}` include a `userId` field, ensuring
 *    that ownership can be verified without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles. Only the owner can read and write their profile.
     * @path /users/{userId}
     * @allow (create, update, get, delete) User with matching {userId} in request.auth
     * @deny (create, update, get, delete) User with non-matching {userId} in request.auth
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not allowed

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure user expenses. Only the owner can read and write their expenses.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create, update, get, delete) User with matching {userId} in request.auth
