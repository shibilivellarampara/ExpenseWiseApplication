rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * @description This ruleset enforces a strict user-ownership model where users can only access their own data.
     * All data is nested under /users/{userId}, ensuring clear ownership and preventing unauthorized access.
     * Key Security Decisions:
     *  - Users can only read and write their own profile data.
     *  - Listing of user profiles is disallowed for privacy.
     *  - Each data type (expenses, accounts, etc.) is stored in a dedicated subcollection under the user's profile,
     *    enforcing data isolation and simplifying access control.
     *  - All write operations are validated to ensure data consistency and prevent unauthorized modification.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && exists(resource);
    }

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) - User with matching userId creates their profile.
     * @allow (get) - User with matching userId reads their profile.
     * @allow (update) - User with matching userId updates their profile.
     * @deny (create) - User attempts to create a profile with a mismatched userId.
     * @deny (delete) - Only the owner can delete
     * @deny (list) - Listing all users is not allowed.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their expenses.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) - User with matching userId creates an expense.
     * @allow (get) - User with matching userId reads their expense.
     * @allow (update) - User with matching userId updates their expense.
     * @deny (create) - User attempts to create an expense with a mismatched userId.
     * @deny (delete) - Only the owner can delete
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their accounts.
     * @path /users/{userId}/accounts/{accountId}
     * @allow (create) - User with matching userId creates an account.
     * @allow (get) - User with matching userId reads their account.
     * @allow (update) - User with matching userId updates their account.
     * @deny (create) - User attempts to create an account with a mismatched userId.
     * @deny (delete) - Only the owner can delete
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/accounts/{accountId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their contributions.
     * @path /users/{userId}/contributions/{contributionId}
     * @allow (create) - User with matching userId creates a contribution.
     * @allow (get) - User with matching userId reads their contribution.
     * @allow (update) - User with matching userId updates their contribution.
     * @deny (create) - User attempts to create a contribution with a mismatched userId.
     * @deny (delete) - Only the owner can delete
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/contributions/{contributionId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their categories.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) - User with matching userId creates a category.
     * @allow (get) - User with matching userId reads their category.
     * @allow (update) - User with matching userId updates their category.
     * @deny (create) - User attempts to create a category with a mismatched userId.
     * @deny (delete) - Only the owner can delete
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/categories/{categoryId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their tags.
     * @path /users/{userId}/tags/{tagId}
     * @allow (create) - User with matching userId creates a tag.
     * @allow (get) - User with matching userId reads their tag.
     * @allow (update) - User with matching userId updates their tag.
     * @deny (create) - User attempts to create a tag with a mismatched userId.
     * @deny (delete) - Only the owner can delete
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/tags/{tagId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}