    match /users/{userId}/contributions/{contributionId} {
       function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows users to manage their categories.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) - User with matching {userId} can create a category. Requires userId in data to match {userId}.
     * @allow (get) - User with matching {userId} can read their category.
     * @allow (list) - User with matching {userId} can list their categories.
     * @allow (update) - User with matching {userId} can update their category.
     * @allow (delete) - User with matching {userId} can delete their category.
     * @deny (create) - User attempts to create a category with a mismatched {userId}.
