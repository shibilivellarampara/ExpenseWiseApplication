/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for managing personal finance data.
 *
 * Data Structure:
 * - User profiles are stored in `/users/{userId}`.
 * - All user-specific data (expenses, accounts, contributions, categories, tags) are nested under `/users/{userId}`.
 * - Shared expenses are stored in `/shared_expenses`.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Listing of other user's data is disallowed.
 * - Shared expenses can be read by anyone.
 *
 * Denormalization for Authorization:
 * - All user-specific documents MUST contain a `userId` field matching the document's path. This avoids costly `get()` calls in security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to manage their own profile.
     * @path /users/{userId}
     * @allow (get, create, update, delete) User with ID 'userId' can perform any operation.
     * @deny (get, create, update, delete) User with ID different than 'userId' cannot perform any operation.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own expenses.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (get, create, update, delete) User with ID 'userId' can perform any operation.
     * @deny (get, create, update, delete) User with ID different than 'userId' cannot perform any operation.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/expenses/{expenseId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage their own accounts.
     * @path /users/{userId}/accounts/{accountId}
     * @allow (get, create, update, delete) User with ID 'userId' can perform any operation.
     * @deny (get, create, update, delete) User with ID different than 'userId' cannot perform any operation.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/accounts/{accountId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage their own contributions.
     * @path /users/{userId}/contributions/{contributionId}
     * @allow (get, create, update, delete) User with ID 'userId' can perform any operation.
     * @deny (get, create, update, delete) User with ID different than 'userId' cannot perform any operation.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/contributions/{contributionId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage their own categories.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (get, create, update, delete) User with ID 'userId' can perform any operation.
     * @deny (get, create, update, delete) User with ID different than 'userId' cannot perform any operation.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/categories/{categoryId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage their own tags.
     * @path /users/{userId}/tags/{tagId}
     * @allow (get, create, update, delete) User with ID 'userId' can perform any operation.
     * @deny (get, create, update, delete) User with ID different than 'userId' cannot perform any operation.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/tags/{tagId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

        /**
     * @description Allows anyone to read shared expenses, but only authenticated users can create, update, or delete them.
     * @path /shared_expenses
     * @allow (get, list) Any user (or no user) can read or list expenses.
     * @deny (create, update, delete) Only authenticated users can create, update and delete expenses.
     * @principle Public read with authenticated write access, allows open listing of shared data.
     */
    match /shared_expenses {
      allow get: if true;
      allow list: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource != null;
      allow delete: if request.auth != null && resource != null;
    }
  }
}