/**
 * @fileoverview Firestore Security Rules for Expense Tracker App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Users can only access
 * and modify data that belongs to them. All data is nested under /users/{userId},
 * ensuring clear ownership.
 *
 * Data Structure:
 * - /users/{userId}: User profiles, accessible only to the owner.
 * - /users/{userId}/expenses/{expenseId}: Expenses for a specific user.
 * - /users/{userId}/accounts/{accountId}: Accounts for a specific user.
 * - /users/{userId}/contributions/{contributionId}: Contributions for a specific user.
 * - /users/{userId}/categories/{categoryId}: Categories for a specific user.
 * - /users/{userId}/tags/{tagId}: Tags for a specific user.
 *
 * Key Security Decisions:
 * - User profiles are only readable and writable by the owning user.
 * - Listing of user profiles is explicitly denied.
 * - All subcollections under /users/{userId} follow the same ownership model.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the resource.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of the existing resource.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description User profile access control.
     * @path /users/{userId}
     * @allow (create) User 'user_abc' can create their profile with matching ID.
     * @allow (get, update, delete) User 'user_abc' can get, update, or delete their own profile.
     * @deny (create) User 'user_abc' cannot create a profile with ID 'user_xyz'.
     * @deny (get, update, delete) User 'user_abc' cannot access profile 'user_xyz'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Expense access control.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) User 'user_abc' can create an expense under their profile.
     * @allow (get, update, delete, list) User 'user_abc' can manage their own expenses.
     * @deny (create) User 'user_abc' cannot create an expense under profile 'user_xyz'.
     * @deny (get, update, delete, list) User 'user_abc' cannot access expenses of 'user_xyz'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Account access control.
     * @path /users/{userId}/accounts/{accountId}
     * @allow (create) User 'user_abc' can create an account under their profile.
     * @allow (get, update, delete, list) User 'user_abc' can manage their own accounts.
     * @deny (create) User 'user_abc' cannot create an account under profile 'user_xyz'.
     * @deny (get, update, delete, list) User 'user_abc' cannot access accounts of 'user_xyz'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/accounts/{accountId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Contribution access control.
     * @path /users/{userId}/contributions/{contributionId}
     * @allow (create) User 'user_abc' can create a contribution under their profile.
     * @allow (get, update, delete, list) User 'user_abc' can manage their own contributions.
     * @deny (create) User 'user_abc' cannot create a contribution under profile 'user_xyz'.
     * @deny (get, update, delete, list) User 'user_abc' cannot access contributions of 'user_xyz'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/contributions/{contributionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Category access control.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) User 'user_abc' can create a category under their profile.
     * @allow (get, update, delete, list) User 'user_abc' can manage their own categories.
     * @deny (create) User 'user_abc' cannot create a category under profile 'user_xyz'.
     * @deny (get, update, delete, list) User 'user_abc' cannot access categories of 'user_xyz'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/categories/{categoryId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Tag access control.
     * @path /users/{userId}/tags/{tagId}
     * @allow (create) User 'user_abc' can create a tag under their profile.
     * @allow (get, update, delete, list) User 'user_abc' can manage their own tags.
     * @deny (create) User 'user_abc' cannot create a tag under profile 'user_xyz'.
     * @deny (get, update, delete, list) User 'user_abc' cannot access tags of 'user_xyz'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/tags/{tagId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
      /**
       * @description Public read access to shared_expenses collection is not allowed.
       * @path /shared_expenses
       * @allow  (get) no one allowed.
       * @allow (list) no one allowed.
       * @allow (create) no one allowed.
       * @allow (update) no one allowed.
       * @allow (delete) no one allowed.
       * @principle The shared_expenses collection should not be publicly accessible.
       */
      match /shared_expenses/{sharedExpenseId} {
        allow get: if false;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
      }
  }
}