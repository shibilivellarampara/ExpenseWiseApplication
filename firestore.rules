      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows users to manage their tags.
     * @path /users/{userId}/tags/{tagId}
     * @allow (create) - User with matching {userId} can create a tag. Requires userId in data to match {userId}.
     * @allow (get) - User with matching {userId} can read their tag.
     * @allow (list) - User with matching {userId} can list their tags.
     * @allow (update) - User with matching {userId} can update their tag.
