/**
 * @file Firestore Security Rules
 * @core_philosophy This ruleset enforces a strict user-ownership model.  Each user has full control over their own data (profile, expenses, accounts, contributions, categories, and tags).  Shared expenses are explicitly disallowed.
 * @data_structure All data is nested under /users/{userId}, creating a private data tree for each user.
 * @key_security_decisions
 *   - Listing of users is disallowed.
 *   - Public read access is NOT granted to any collection.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the document based on the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an existing owner of the document.  Useful for update/delete operations.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description
     * @path /users/{userId}
     * @allow (create) - User with UID 'user123' can create their own profile.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { "id": "user123", "name": "Test User", "email": "test@example.com" }
     * @deny (create) - User with UID 'user456' attempts to create a profile for 'user123'.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { "id": "user123", "name": "Test User", "email": "test@example.com" }
     * @principle Enforces self-creation and ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) - User with UID 'user123' can create an expense under their profile.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { "userId": "user123", ... }
     * @deny (create) - User with UID 'user456' attempts to create an expense under 'user123''s profile.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { "userId": "user123", ... }
     * @principle Enforces document ownership for expenses.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/accounts/{accountId}
     * @allow (create) - User with UID 'user123' can create an account under their profile.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { "userId": "user123", ... }
     * @deny (create) - User with UID 'user456' attempts to create an account under 'user123''s profile.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { "userId": "user123", ... }
     * @principle Enforces document ownership for accounts.
     */
    match /users/{userId}/accounts/{accountId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/contributions/{contributionId}
     * @allow (create) - User with UID 'user123' can create a contribution under their profile.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { "userId": "user123", ... }
     * @deny (create) - User with UID 'user456' attempts to create a contribution under 'user123''s profile.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { "userId": "user123", ... }
     * @principle Enforces document ownership for contributions.
     */
    match /users/{userId}/contributions/{contributionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) - User with UID 'user123' can create a category under their profile.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { "userId": "user123", ... }
     * @deny (create) - User with UID 'user456' attempts to create a category under 'user123''s profile.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { "userId": "user123", ... }
     * @principle Enforces document ownership for categories.
     */
    match /users/{userId}/categories/{categoryId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /users/{userId}/tags/{tagId}
     * @allow (create) - User with UID 'user123' can create a tag under their profile.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { "userId": "user123", ... }
     * @deny (create) - User with UID 'user456' attempts to create a tag under 'user123''s profile.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { "userId": "user123", ... }
     * @principle Enforces document ownership for tags.
     */
    match /users/{userId}/tags/{tagId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
        match /shared_expenses/{document} {
            allow get: if false;
            allow list: if false;
            allow create: if false;
            allow update: if false;
            allow delete: if false;
    }
  }
}