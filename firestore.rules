/**
 * @fileoverview Firestore Security Rules for the Expense Tracker application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model.  Each user has full control
 * over their own data, and no access to other users' data unless explicitly
 * shared through the shared_expenses collection (not yet implemented).
 *
 * Data Structure:
 * All personal user data (profiles, expenses, accounts, etc.) is nested under
 * `/users/{userId}`.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Write operations are only permitted by the owner of the document.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return {bool} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource and it exists.
     * Used for update and delete operations.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return {bool} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Root match to prevent unauthorized database-wide operations.
     */
    match /{document=**} {
      allow read, write: if false;
    }

    /**
     * @description Manages access to user profiles.
     * @path /users/{userId}
     * @allow (create) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can create their profile.
     * @deny (create) User 'anotherUser' cannot create a profile with ID 'omaPy2rCO4fj1nAtA6nM2IbD3nH3'.
     * @allow (get) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can get their profile.
     * @deny (get) User 'anotherUser' cannot get user 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' profile.
     * @principle Enforces user ownership for profile data.
     */
    match /users/{userId} {
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to user expenses.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can create an expense in their profile.
     * @deny (create) User 'anotherUser' cannot create an expense with userId 'omaPy2rCO4fj1nAtA6nM2IbD3nH3'.
     * @allow (get) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can get their expenses.
     * @deny (get) User 'anotherUser' cannot get user 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' expenses.
     * @principle Enforces user ownership for expense data.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to user accounts.
     * @path /users/{userId}/accounts/{accountId}
     * @allow (create) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can create an account in their profile.
     * @deny (create) User 'anotherUser' cannot create an account with userId 'omaPy2rCO4fj1nAtA6nM2IbD3nH3'.
     * @allow (get) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can get their accounts.
     * @deny (get) User 'anotherUser' cannot get user 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' accounts.
     * @principle Enforces user ownership for account data.
     */
    match /users/{userId}/accounts/{accountId} {
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to user contributions.
     * @path /users/{userId}/contributions/{contributionId}
     * @allow (create) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can create a contribution in their profile.
     * @deny (create) User 'anotherUser' cannot create a contribution with userId 'omaPy2rCO4fj1nAtA6nM2IbD3nH3'.
     * @allow (get) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can get their contributions.
     * @deny (get) User 'anotherUser' cannot get user 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' contributions.
     * @principle Enforces user ownership for contribution data.
     */
    match /users/{userId}/contributions/{contributionId} {
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to user categories.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can create a category in their profile.
     * @deny (create) User 'anotherUser' cannot create a category with userId 'omaPy2rCO4fj1nAtA6nM2IbD3nH3'.
     * @allow (get) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can get their categories.
     * @deny (get) User 'anotherUser' cannot get user 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' categories.
     * @principle Enforces user ownership for category data.
     */
    match /users/{userId}/categories/{categoryId} {
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to user tags.
     * @path /users/{userId}/tags/{tagId}
     * @allow (create) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can create a tag in their profile.
     * @deny (create) User 'anotherUser' cannot create a tag with userId 'omaPy2rCO4fj1nAtA6nM2IbD3nH3'.
     * @allow (get) User 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' can get their tags.
     * @deny (get) User 'anotherUser' cannot get user 'omaPy2rCO4fj1nAtA6nM2IbD3nH3' tags.
     * @principle Enforces user ownership for tag data.
     */
    match /users/{userId}/tags/{tagId} {
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description  Placeholder match statement for shared_expenses collection.  THIS IS A TEMPORARY PLACEHOLDER.
     * @path /shared_expenses/{documentId}
     * @allow (get) This rule is currently open, which is insecure.  Replace with appropriate logic.
     * @deny (create) Always denies create operations.
     * @principle Placeholder rule for a collection with insufficient access control.
     */
    match /shared_expenses/{documentId} {
        allow get: if false; // TODO: Implement secure read rules for shared expenses.
        allow list: if false; // TODO: Implement secure read rules for shared expenses.
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
  }
}