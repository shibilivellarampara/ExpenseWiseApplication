/**
 * @file Firestore Security Rules
 * @description Secure Firestore access for a personal finance & shared expense manager app.
 *
 * Data Structure:
 * - User profiles: `/users/{userId}`
 * - User-owned subcollections: `/users/{userId}/{collection}/{docId}`
 * - Shared expenses: `/shared_expenses/{expenseId}`
 *
 * Principles:
 * - Each user can manage only their own data.
 * - Shared expenses are publicly readable.
 * - Only authenticated users can create/update/delete shared expenses.
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /********************************************
     * USER PROFILES
     ********************************************/
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      // Only the owner can access their profile
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /********************************************
     * USER SUBCOLLECTIONS (expenses, accounts, contributions, categories, tags)
     ********************************************/
    match /users/{userId}/{subcollection}/{docId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /********************************************
     * SHARED EXPENSES
     ********************************************/
    /**
     * Publicly readable shared expenses.
     * Authenticated users can create/update/delete.
     */
    match /shared_expenses/{expenseId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
