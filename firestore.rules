/**
 * @fileoverview Firestore Security Rules for Expense Tracker App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model.  Each user has full control
 * over their own data, and no access to other users' data. Data schema validation is
 * relaxed to allow for rapid prototyping and iteration.
 *
 * Data Structure:
 * The Firestore database is structured as follows:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/expenses/{expenseId}: Stores individual expense records for a user.
 * - /users/{userId}/accounts/{accountId}: Stores user-defined financial accounts.
 * - /users/{userId}/contributions/{contributionId}: Stores contribution records for shared expenses.
 * - /users/{userId}/categories/{categoryId}: Stores user-defined expense categories.
 * - /users/{userId}/tags/{tagId}: Stores user-defined tags for expenses.
 *
 * Key Security Decisions:
 * - User profiles can only be created by the user themselves (self-creation).
 * - User profiles can only be read and updated by the user themselves.
 * - All data nested under a user's document is only accessible to that user.
 * - Listing of documents is allowed for all user-scoped collections.
 * - No administrative roles are defined in this initial prototype.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' creates their profile.
     * @allow (get, update) User with ID 'user123' reads/updates their profile.
     * @deny (create) User with ID 'user123' attempts to create a profile for 'user456'.
     * @deny (get, update, delete) User with ID 'user456' attempts to read/update/delete user 'user123's profile.
     * @principle Enforces document ownership for profile management.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.id == userId;
      allow delete: if false;
    }

    /**
     * @description Controls access to expense documents for a specific user.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) User with ID 'user123' creates an expense.
     * @allow (get, update, delete) User with ID 'user123' reads/updates/deletes their own expense.
     * @deny (create, get, update, delete) User with ID 'user456' attempts to create/read/update/delete user 'user123's expense.
     * @principle Restricts access to a user's own expense records.
     */
    match /users/{userId}/expenses/{expenseId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Controls access to account documents for a specific user.
     * @path /users/{userId}/accounts/{accountId}
     * @allow (create) User with ID 'user123' creates an account.
     * @allow (get, update, delete) User with ID 'user123' reads/updates/deletes their own account.
     * @deny (create, get, update, delete) User with ID 'user456' attempts to create/read/update/delete user 'user123's account.
     * @principle Restricts access to a user's own account records.
     */
    match /users/{userId}/accounts/{accountId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Controls access to contribution documents for a specific user.
     * @path /users/{userId}/contributions/{contributionId}
     * @allow (create) User with ID 'user123' creates a contribution.
     * @allow (get, update, delete) User with ID 'user123' reads/updates/deletes their own contribution.
     * @deny (create, get, update, delete) User with ID 'user456' attempts to create/read/update/delete user 'user123's contribution.
     * @principle Restricts access to a user's own contribution records.
     */
    match /users/{userId}/contributions/{contributionId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Controls access to category documents for a specific user.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) User with ID 'user123' creates a category.
     * @allow (get, update, delete) User with ID 'user123' reads/updates/deletes their own category.
     * @deny (create, get, update, delete) User with ID 'user456' attempts to create/read/update/delete user 'user123's category.
     * @principle Restricts access to a user's own category records.
     */
    match /users/{userId}/categories/{categoryId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Controls access to tag documents for a specific user.
     * @path /users/{userId}/tags/{tagId}
     * @allow (create) User with ID 'user123' creates a tag.
     * @allow (get, update, delete) User with ID 'user123' reads/updates/deletes their own tag.
     * @deny (create, get, update, delete) User with ID 'user456' attempts to create/read/update/delete user 'user123's tag.
     * @principle Restricts access to a user's own tag records.
     */
    match /users/{userId}/tags/{tagId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }
  }
}