/**
 * @file Firestore Security Rules
 * @core_philosophy This ruleset enforces a strict user-ownership model for personal data
 *  and a shared-access model for collaborative expenses. Data structure reflects the
 *  entities and relationships defined in the application's data model.
 * @data_structure All user-specific data (profiles, expenses, accounts, categories, tags)
 *  is nested under `/users/{userId}`. Shared expenses and their associated expenses are
 *  stored in a separate `/shared_expenses/{sharedExpenseId}` collection.
 * @key_security_decisions
 *  - User listing is disallowed to protect privacy.
 *  - Shared expenses require explicit membership for access.
 * @denormalization_for_authorization N/A - Denormalization is not used in this rules file, but may be useful for advanced use cases.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     * @example isSignedIn() == true
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource.
     * @param {string} userId - The user ID to compare with the authenticated user's ID.
     * @return {boolean} True if the user is the owner, false otherwise.
     * @example isOwner('user123') == true
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource and it exists.
     *  This function is specifically for `update` and `delete` operations.
     * @param {string} userId - The user ID to compare with the authenticated user's ID.
     * @return {boolean} True if the user is the owner and the resource exists, false otherwise.
     * @example isExistingOwner('user123') == true
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    match /users/{userId} {
      /**
       * @description Controls access to user profiles.
       * @path /users/{userId}
       * @allow (create) - Allow user to create their own profile if the userId matches their auth UID.
       * @allow (get, update, delete) - Allow access only to the owner of the profile.
       * @deny (create) - Deny creation if the userId does not match the auth UID.
       * @deny (get, update, delete) - Deny access to other users' profiles.
       * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
       */
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/expenses/{expenseId} {
      /**
       * @description Controls access to user expenses.
       * @path /users/{userId}/expenses/{expenseId}
       * @allow (create) - Allow creation if the userId matches the auth UID.
       * @allow (get, update, delete) - Allow access only to the owner of the expense.
       * @deny (create) - Deny creation if the userId does not match the auth UID.
       * @deny (get, update, delete) - Deny access to other users' expenses.
       * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
       */
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/accounts/{accountId} {
      /**
       * @description Controls access to user accounts.
       * @path /users/{userId}/accounts/{accountId}
       * @allow (create) - Allow creation if the userId matches the auth UID.
       * @allow (get, update, delete) - Allow access only to the owner of the account.
       * @deny (create) - Deny creation if the userId does not match the auth UID.
       * @deny (get, update, delete) - Deny access to other users' accounts.
       * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
       */
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/contributions/{contributionId} {
      /**
       * @description Controls access to user contributions.
       * @path /users/{userId}/contributions/{contributionId}
       * @allow (create) - Allow creation if the userId matches the auth UID.
       * @allow (get, update, delete) - Allow access only to the owner of the contribution.
       * @deny (create) - Deny creation if the userId does not match the auth UID.
       * @deny (get, update, delete) - Deny access to other users' contributions.
       * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
       */
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/categories/{categoryId} {
      /**
       * @description Controls access to user categories.
       * @path /users/{userId}/categories/{categoryId}
       * @allow (create) - Allow creation if the userId matches the auth UID.
       * @allow (get, update, delete) - Allow access only to the owner of the category.
       * @deny (create) - Deny creation if the userId does not match the auth UID.
       * @deny (get, update, delete) - Deny access to other users' categories.
       * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
       */
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/tags/{tagId} {
      /**
       * @description Controls access to user tags.
       * @path /users/{userId}/tags/{tagId}
       * @allow (create) - Allow creation if the userId matches the auth UID.
       * @allow (get, update, delete) - Allow access only to the owner of the tag.
       * @deny (create) - Deny creation if the userId does not match the auth UID.
       * @deny (get, update, delete) - Deny access to other users' tags.
       * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
       */
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /shared_expenses/{sharedExpenseId} {
        allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

       match /shared_expenses/{sharedExpenseId}/expenses/{expenseId} {
        allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}