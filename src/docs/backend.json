
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the UserProfile entity." },
        "name": { "type": "string", "description": "The user's full name." },
        "email": { "type": "string", "description": "The user's email address.", "format": "email" },
        "photoURL": { "type": "string", "description": "URL of the user's profile picture.", "format": "uri" },
        "phoneNumber": { "type": "string", "description": "The user's phone number." },
        "defaultCurrency": { "type": "string", "description": "The user's default currency code (e.g., 'USD', 'INR').", "default": "INR" },
        "expenseFieldSettings": {
          "type": "object",
          "description": "User preferences for which expense fields are mandatory.",
          "properties": {
            "isDescriptionRequired": { "type": "boolean", "default": false },
            "isTagRequired": { "type": "boolean", "default": false },
            "isCategoryRequired": { "type": "boolean", "default": true }
          }
        },
        "dashboardSettings": {
          "type": "object",
          "description": "User preferences for the dashboard.",
          "properties": {
            "useCategoryColorsInChart": { "type": "boolean", "default": true }
          }
        },
        "sharedExpenseIds": {
          "type": "array",
          "description": "A list of IDs of the shared expenses this user is a member of.",
          "items": { "type": "string" }
        },
        "isAdmin": {
          "type": "boolean",
          "description": "Indicates if the user has administrative privileges.",
          "default": false
        }
      },
      "required": ["id", "name", "email"]
    },
    "Expense": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Expense",
      "type": "object",
      "description": "Represents a transaction record, which can be an expense or income.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "type": { "type": "string", "enum": ["expense", "income"], "description": "Type of the transaction." },
        "amount": { "type": "number" },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "accountId": { "type": "string", "description": "Reference to the Account document ID." },
        "categoryId": { "type": "string", "description": "Reference to the Category document ID (for expenses)." },
        "tagIds": { "type": "array", "items": { "type": "string" }, "description": "Reference to the Tag document IDs." },
        "sharedExpenseId": { "type": "string", "description": "Reference to the SharedExpense this transaction belongs to." }
      },
      "required": ["id", "userId", "type", "amount", "date", "accountId"]
    },
    "Account": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Account",
      "type": "object",
      "description": "Represents a user-defined financial account.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["bank", "credit_card", "wallet", "cash"] },
        "balance": { "type": "number", "description": "Current balance or outstanding amount." },
        "limit": { "type": "number", "description": "Credit limit for credit cards." },
        "icon": { "type": "string", "description": "Name of the lucide-react icon." },
        "status": { "type": "string", "enum": ["active", "inactive"], "default": "active", "description": "The status of the account." }
      },
      "required": ["id", "userId", "name", "type", "balance", "icon", "status"]
    },
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a user-defined expense category.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "icon": { "type": "string", "description": "Name of the lucide-react icon." },
        "userId": { "type": "string" }
      },
      "required": ["name", "icon", "userId"]
    },
    "Tag": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Tag",
      "type": "object",
      "description": "Represents a user-defined tag for expenses.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "icon": { "type": "string", "description": "Name of the lucide-react icon." },
        "userId": { "type": "string" }
      },
      "required": ["name", "icon", "userId"]
    },
    "SharedExpense": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SharedExpense",
      "type": "object",
      "description": "Represents a shared expense space where multiple users can add transactions.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "ownerId": { "type": "string" },
        "memberIds": {
          "type": "array",
          "items": { "type": "string" }
        },
        "joinId": { "type": "string", "description": "6-character unique code for joining." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "ownerId", "memberIds", "joinId"]
    },
    "Contribution": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Contribution",
      "type": "object",
      "description": "Represents a contribution record for shared expenses.",
      "properties": {
        "id": { "type": "string" },
        "totalAmount": { "type": "number" },
        "description": { "type": "string" },
        "userId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "paidById": { "type": "string" },
        "contributorShares": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "userId": { "type": "string" },
              "share": { "type": "number" }
            }
          }
        }
      },
      "required": ["id", "totalAmount", "description", "userId", "date", "paidById"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous", "phone", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/expenses/{expenseId}": {
      "schema": { "$ref": "#/entities/Expense" },
      "description": "Stores individual expense records for a user."
    },
    "/users/{userId}/accounts/{accountId}": {
      "schema": { "$ref": "#/entities/Account" },
      "description": "Stores user's financial accounts."
    },
    "/users/{userId}/categories/{categoryId}": {
      "schema": { "$ref": "#/entities/Category" },
      "description": "Stores user-defined expense categories."
    },
    "/users/{userId}/tags/{tagId}": {
      "schema": { "$ref": "#/entities/Tag" },
      "description": "Stores user-defined expense tags."
    },
    "/shared_expenses/{sharedExpenseId}": {
      "schema": { "$ref": "#/entities/SharedExpense" },
      "description": "Stores shared expense spaces, accessible by multiple users."
    },
    "/shared_expenses/{sharedExpenseId}/expenses/{expenseId}": {
      "schema": { "$ref": "#/entities/Expense"},
      "description": "Stores expense records for a specific shared space."
    },
    "/users/{userId}/contributions/{contributionId}": {
        "schema": { "$ref": "#/entities/Contribution" },
        "description": "Stores contribution records for shared expenses."
    },
    "/admin/{adminId}": {
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "Admin access control."
    }
  }
}
